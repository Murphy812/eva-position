{
    "openapi": "3.0.0",
    "info": {
        "title": "EVA API",
        "contact": {
            "email": "gurkalov.dev@gmail.com"
        },
        "version": "0.0.1"
    },
    "paths": {
        "/api/v1/login": {
            "post": {
                "tags": [
                    "User"
                ],
                "description": "Login as user.",
                "operationId": "loginUser",
                "requestBody": {
                    "description": "Creds for authorization.",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserCreds"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Authorize user",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserApiKey"
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "unexpected error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorModel"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/register": {
            "post": {
                "tags": [
                    "User"
                ],
                "description": "Register new user.",
                "operationId": "registerUser",
                "requestBody": {
                    "description": "Creds for registeration.",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserCreds"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Register user",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserApiKey"
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "unexpected error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorModel"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/profile": {
            "get": {
                "tags": [
                    "User"
                ],
                "description": "Returns a user info which auth for token",
                "operationId": "profileUser",
                "responses": {
                    "200": {
                        "description": "User response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "unexpected error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorModel"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v1/beacons": {
            "get": {
                "tags": [
                    "Beacon"
                ],
                "description": "Returns all beacons",
                "parameters": [
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "maximum number of results to return",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Beacon response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Beacon"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Beacon"
                ],
                "description": "Creates a new beacon.",
                "operationId": "createBeacon",
                "requestBody": {
                    "description": "Beacon to add.",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/NewBeacon"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Beacon response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Beacon"
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "unexpected error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorModel"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/beacons/{id}": {
            "get": {
                "tags": [
                    "Beacon"
                ],
                "description": "Returns a beacon based on a single ID",
                "operationId": "getBeacon",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of beacon to fetch",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Beacon response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Beacon"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "unexpected error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorModel"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "tags": [
                    "Beacon"
                ],
                "description": "Update a beacon based on a single ID.",
                "operationId": "updateBeacon",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of beacon to fetch",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Beacon to update.",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/NewBeacon"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Beacon response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Beacon"
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "unexpected error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorModel"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "Beacon"
                ],
                "description": "Deletes a single beacon based on the ID.",
                "operationId": "deleteBeacon",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of beacon to delete",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Beacon deleted"
                    },
                    "default": {
                        "description": "unexpected error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorModel"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/positions": {
            "get": {
                "tags": [
                    "Position"
                ],
                "description": "Returns all positions",
                "parameters": [
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "maximum number of results to return",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Position response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Position"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Position"
                ],
                "description": "Creates a new position.",
                "operationId": "createPosition",
                "requestBody": {
                    "description": "Position to add.",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/NewPosition"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Position response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Position"
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "unexpected error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorModel"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v1/positions/{id}": {
            "get": {
                "tags": [
                    "Position"
                ],
                "description": "Returns a position based on a single ID",
                "operationId": "getPosition",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of position to fetch",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Position response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Position"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "unexpected error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorModel"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/users": {
            "get": {
                "tags": [
                    "User"
                ],
                "description": "Returns all users",
                "parameters": [
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "maximum number of results to return",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/User"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/users/{id}": {
            "get": {
                "tags": [
                    "User"
                ],
                "description": "Returns a user based on a single ID",
                "operationId": "getUser",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of user to fetch",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        },
                        "example": 1
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "unexpected error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorModel"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "NewBeacon": {
                "required": [
                    "name"
                ],
                "properties": {
                    "label": {
                        "type": "string",
                        "format": "string",
                        "example": "Hall Room"
                    },
                    "ssid": {
                        "type": "string",
                        "format": "string"
                    },
                    "bssid": {
                        "type": "string",
                        "format": "string"
                    }
                },
                "type": "object"
            },
            "BeaconSignal": {
                "required": [
                    "ssid",
                    "bbsid",
                    "level"
                ],
                "properties": {
                    "ssid": {
                        "type": "string",
                        "format": "string",
                        "example": "beacon1"
                    },
                    "bssid": {
                        "type": "string",
                        "format": "string",
                        "example": "b0:0a:95:9d:00:0a"
                    },
                    "level": {
                        "type": "integer",
                        "format": "int64",
                        "example": -50
                    }
                },
                "type": "object"
            },
            "Beacon": {
                "required": [
                    "ssid",
                    "bbsid",
                    "level"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "label": {
                        "type": "string",
                        "format": "string",
                        "example": "Hall Room"
                    },
                    "ssid": {
                        "type": "string",
                        "format": "string",
                        "example": "beacon1"
                    },
                    "bssid": {
                        "type": "string",
                        "format": "string",
                        "example": "b0:0a:95:9d:00:0a"
                    }
                },
                "type": "object"
            },
            "ErrorModel": {
                "required": [
                    "code",
                    "message"
                ],
                "properties": {
                    "code": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "message": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "NewPosition": {
                "required": [
                    "name"
                ],
                "properties": {
                    "beacons": {
                        "type": "array",
                        "format": "array",
                        "items": {
                            "$ref": "#/components/schemas/BeaconSignal"
                        }
                    }
                },
                "type": "object"
            },
            "Position": {
                "type": "object",
                "allOf": [
                    {
                        "$ref": "#/components/schemas/NewPosition"
                    },
                    {
                        "required": [
                            "id"
                        ],
                        "properties": {
                            "id": {
                                "type": "integer",
                                "format": "int64"
                            },
                            "user_id": {
                                "type": "integer",
                                "format": "int64"
                            }
                        },
                        "type": "object"
                    }
                ]
            },
            "UserCreds": {
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "string",
                        "example": "test@email.com"
                    },
                    "password": {
                        "type": "string",
                        "format": "string",
                        "example": "secret"
                    },
                    "name": {
                        "type": "string",
                        "format": "string",
                        "example": "Tom Sand"
                    }
                },
                "type": "object"
            },
            "UserApiKey": {
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "api_key": {
                        "type": "string",
                        "format": "string",
                        "example": "em1JbEVqSnZlR0lPMlozenZ5YmpPUWdKSURiVGpnZmg="
                    }
                },
                "type": "object"
            },
            "User": {
                "type": "object",
                "allOf": [
                    {
                        "required": [
                            "id"
                        ],
                        "properties": {
                            "id": {
                                "type": "integer",
                                "format": "int64",
                                "example": 1
                            },
                            "router_id": {
                                "type": "integer",
                                "format": "int64",
                                "example": 2
                            },
                            "beacon_id": {
                                "type": "integer",
                                "format": "int64",
                                "example": 3
                            },
                            "name": {
                                "type": "string",
                                "format": "string",
                                "example": "User Name"
                            },
                            "email": {
                                "type": "string",
                                "format": "string",
                                "example": "test@email.com"
                            },
                            "updated_at": {
                                "type": "string",
                                "format": "string",
                                "example": "2019-01-26 20:00:57"
                            },
                            "beacon": {
                                "type": "object",
                                "format": "object",
                                "$ref": "#/components/schemas/Beacon"
                            }
                        },
                        "type": "object"
                    }
                ]
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "name": "Authorization",
                "in": "header",
                "scheme": "bearer"
            }
        }
    }
}